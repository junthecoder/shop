{% set header = true %}
{% extends 'base.html.twig' %}

{% block title %}{{ item.name }}{% endblock %}

{% block body %}
  <div class="container m-5">
    <div class="row">
      <div class="col col-md-auto">
        <img src="/images/200x200.png" alt="{{ item.name }}?>">
      </div>
      <div class="col">
        <h3>{{ item.name }}</h3>
      </div>
      <div class="col col-md-auto">
        <div class="fs-4 mb-3" style="color: #ff0072;">¥ {{ item.price }}</div>
        <button type="submit" class="btn btn-warning mx-auto my-2">カートに入れる</button>
      </div>
    </div>
  </div>
{% endblock %}
